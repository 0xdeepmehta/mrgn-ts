{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_ENVIRONMENT",
    "NEXT_PUBLIC_MARGINFI_RPC_ENDPOINT_OVERRIDE",
    "MARGINFI_ENV",
    "MARGINFI_RPC_ENDPOINT",
    "MARGINFI_PROGRAM",
    "MARGINFI_GROUP",
    "MARGINFI_WALLET_KEY",
    "MARGINFI_WALLET"
  ]
}
